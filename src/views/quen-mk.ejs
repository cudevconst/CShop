<body>
    <%- include('header.ejs') %>
   
    <div class="login-form p-5 mt-5 border border-5">
      <h1 class="text-center mb-5">Quên mật khẩu</h1>
      <div class="alert alert-success text-center my-5 message"  hidden style="width: 400px; margin: 0 auto;" role="alert">
        Mật khẩu đã gửi đến Email của bạn
      </div>
      <form method="POST" id="form">
        
        <div class="form-group">
          <label for="exampleInputEmail1">Nhập email</label>
          <input type="email" class="form-control" id="email" aria-describedby="textHelp" placeholder="Nhập email của bạn" name="username">
          
        </div>
        
        <div class="text-center mt-5">
          <button type="submit" class="btn btn-primary">Gửi</button>
        </div>
    </form>

    
          


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
